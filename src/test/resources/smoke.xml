<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="smoke" parallel = "methods" thread-count="1">
    <parameter name="BaseURL" value="https://bbb.testpro.io/"/>
    <test name="Example Test" preserve-order="false">
        <classes>
            <class name="BaseTest"/>
            <class name="LoginTest"/>
            <class name="HomeTests">
                <methods>
                    <include name="playSongTest"/>
                    <include name="pauseSongTest"/>
                </methods>
            </class>
            <class name="PlaylistTest">
                <methods>
                     <include name="createPlaylist"/>
                     <include name="deletePlaylistTest"/>
                     <include name="renamePlaylistTest"/>
                     <include name="addSongPlaylist"/>
                </methods>
            </class>
            <class name="SearchTest"/>
        </classes>
    </test>
</suite>